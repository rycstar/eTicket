{
	//Required
	"manifest_version": 2,
	"name": "gitlab tree",	
	"version": "0.1",

	// Recommended
	/*"default_locale": "en",*/
	"description": "A gitlab source tree",
	"icons": {
        "16": "images/logo16x16.png",
        "48": "images/logo32x32.png",
        "128": "images/logo128x128.png"
    },

    //Optional
    "author": "Terry Rong",

    "browser_action": {
		"default_icon": "images/logo32x32.png",
        "default_title": "click here!",
        "default_pop": "popup.html"
    },

    "permissions": [
    	"activeTab"
    ],
    "web_accessible_resources": [ "images/*" ]
}